source ~/.vim/vimrc

colorscheme railscasts
set nowrap

nmap <Tab> gt
nmap <S-Tab> gT

set autoindent
set expandtab
set ignorecase
set nocompatible
set nowrap
set shiftwidth=2
set smartindent
set smarttab
set tabstop=2
set undodir=~/.vim/extras/undofiles

let g:ctrlp_custom_ignore = '\.bundle$\|bin$\|\.git$\|.swp$'
